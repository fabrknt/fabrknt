# Anthropic API (for content generation)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Twitter/X API Credentials
# Get these from: https://developer.twitter.com/en/portal/dashboard
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_SECRET=your_access_secret

# Optional: OpenAI (fallback)
OPENAI_API_KEY=your_openai_api_key_here

# Configuration
CONTENT_REVIEW_MODE=true  # Set to false for auto-posting (not recommended initially)
BATCH_SIZE=10  # Number of tweets to generate per batch
POSTING_INTERVAL_HOURS=3  # Hours between posts
